<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
   <%= f.label :"ニックネーム" %><br />
   <%= f.text_field :nickname, placeholder:"ミニルーム",autofocus: true %>
 </div>

 <div class="field">
   <%= f.label :"ラストネーム" %><br />
   <%= f.text_field :lastname, placeholder:"ミニ"%>
 </div>

 <div class="field">
   <%= f.label :"ファーストネーム" %><br />
   <%= f.text_field :firstname, placeholder:"ルーム" %>
 </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, placeholder:"MiniRoom@com", autocomplete: "email" %>
  </div>

   <%if @sns_id.present? %>
   <%= hidden_field_tag :sns_auth, true %>
 <% else %>
   <div class="field">
     <%= f.label :"パスワード" %>
     <% @minimum_password_length %>
     <br />
     <%= f.password_field :password, placeholder:"6文字以上", autocomplete: "new-password" %>
   </div>

   <div class="field">
     <%= f.label :"パスワード(確認用)" %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
 <% end %>

  <div class="actions">
    <%= f.submit "サインアップ" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
