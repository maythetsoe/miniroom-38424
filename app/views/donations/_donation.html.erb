   <div class="card__body">
 <div class='donation-img-content'>
 <%= link_to image_tag(donation.image, class: "donation-img" ), donation_path(donation.id), method: :get %> <br>
         <% if donation.receive.present? %>  
          <div class='out'>
            <span>あげちゃった!!</span>
          </div>
     <% end %> 

    <%= link_to donation.name, donations_path(donation.id), class: :card__title%><br>
 <%= link_to "/#{donation.user.nickname}さん❤️❤️❤️", "/users/#{donation.user.id}" , class: :card__user %>  
  </div>
<p class="pagetop"><a href="#wrap">▲</a></p>
<script>
$(document).ready(function() {
  var pagetop = $('.pagetop');
    $(window).scroll(function () {
       if ($(this).scrollTop() > 100) {
            pagetop.fadeIn();
       } else {
            pagetop.fadeOut();
            }
       });
       pagetop.click(function () {
           $('body, html').animate({ scrollTop: 0 }, 500);
              return false;
   });
});
</script>
</div>